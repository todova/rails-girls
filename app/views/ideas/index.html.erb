<%= link_to 'New Idea', new_idea_path, class: "btn custom-btn" %>
<h1>Let's run</h1>
<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="span4 picture-margin">
        <%= link_to (image_tag idea.picture_url, :width => '100%'), idea if idea.picture.present?%>
        <h4><%= link_to idea.name, idea %></h4>
      </div>
    <% end %>
  </div>
<% end %>
<br>


